<%- model_class = Purchasedetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @purchasedetail.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:purchase_id) %>:</strong></dt>
  <dd><%= @purchasedetail.purchase_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @purchasedetail.supplier_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spec_id) %>:</strong></dt>
  <dd><%= @purchasedetail.spec_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:qg_period) %>:</strong></dt>
  <dd><%= @purchasedetail.qg_period %></dd>
  <dt><strong><%= model_class.human_attribute_name(:batch_no) %>:</strong></dt>
  <dd><%= @purchasedetail.batch_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @purchasedetail.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sum) %>:</strong></dt>
  <dd><%= @purchasedetail.sum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @purchasedetail.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @purchasedetail.status %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              purchasedetails_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_purchasedetail_path(@purchasedetail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              purchasedetail_path(@purchasedetail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
