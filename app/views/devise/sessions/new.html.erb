<center>
  <%= bootstrap_flash %>
  <div id="bg">
    <div id="login-wrapper" class="png_bg">
      <div id="login-top">
        <h1><%= t('.title', :default => "Sign in") %></h1>
      </div>
      <div id="login-content">
      	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
      	<p>

          <%= f.label t('.username', :default => "Username") %> 
          <%= f.text_field :username, :class=>"text-input" %>
        </p>

        <div class="clear"></div>

        <p>
          <%= f.label t('.password', :default => "Password") %>
          <%= f.password_field :password, :class=>"text-input" %>
        </p>


        <p id="remember-password">
          <% if devise_mapping.rememberable? -%>
          <%= f.check_box :remember_me %> <%= f.label t('.remember_me', :default => "Remember me") %>
          <% end -%>
        </p>
        <div class="clear"></div>
        <p><%= f.submit t('.sign_in', :default => "Sign in"), :class=>"button" %></p>
        <% end %>
        <p>
          <%= render "devise/shared/links" %>
        </p>
        </div>
      </div>
    </div>
  </div>
</center>