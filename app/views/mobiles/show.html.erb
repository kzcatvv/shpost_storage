<%- model_class = Mobile -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:mobile_no) %>:</strong></dt>
  <dd><%= @mobile.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:mobile_type) %>:</strong></dt>
  <dd><%= @mobile.mobile_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:version) %>:</strong></dt>
  <dd><%= @mobile.version %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user) %>:</strong></dt>
  <dd><%= @mobile.user.try :name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:last_sign_in_time) %>:</strong></dt>
  <dd><%= @mobile.last_sign_in_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:cancel) %>:</strong></dt>
  <dd><%= @mobile.cancel ? '否' : '是' %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              mobiles_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_mobile_path(@mobile), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              mobile_path(@mobile),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
