<%- model_class = Role -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= User.find(@role.user_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:storage_id) %>:</strong></dt>
  <dd><%= Storage.find(@role.storage_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:role) %>:</strong></dt>
  <dd><%= @role.role %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              user_roles_path(@user), :class => 'btn btn-default'  %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              user_role_path(@user,@role),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
