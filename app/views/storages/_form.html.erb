
<%= form_for @storage , :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.error_messages %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :default_storage, :class => 'control-label' %> 
    <div class="controls">
      <%=f.check_box :default_storage,:class =>'check_box'%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :need_pick, :class => 'control-label' %> 
    <div class="controls">
      <%=f.check_box :need_pick,:class =>'check_box'%>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
        storages_path, :class => 'btn btn-default' %>
 
<% end %>
