<%= form_for @business, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :email, :class => 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :contactor, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :contactor, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :phone, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :phone, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :address, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>
   <div class="control-group">
    <%= f.label :alertday, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :alertday, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :secret_key, :class => 'control-label' %>
    <div class="controls">
      <%= f.password_field :secret_key, :class => 'text_field' %>
    </div>
  </div>

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :index, Business %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              businesses_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
