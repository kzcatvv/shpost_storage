<%- model_class = Specification -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:commodity_id) %>:</strong></dt>
  <dd><%= Commodity.find(@specification.commodity_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sku) %>:</strong></dt>
  <dd><%= @specification.sku %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sixnine_code) %>:</strong></dt>
  <dd><%= @specification.sixnine_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @specification.desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @specification.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name_en) %>:</strong></dt>
  <dd><%= @specification.name_en %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long) %>:</strong></dt>
  <dd><%= @specification.long %></dd>
   <dt><strong><%= model_class.human_attribute_name(:wide) %>:</strong></dt>
  <dd><%= @specification.wide %></dd>
   <dt><strong><%= model_class.human_attribute_name(:high) %>:</strong></dt>
  <dd><%= @specification.high %></dd>
  <dt><strong><%= model_class.human_attribute_name(:weight) %>:</strong></dt>
  <dd><%= @specification.weight %></dd>
   <dt><strong><%= model_class.human_attribute_name(:volume) %>:</strong></dt>
  <dd><%= @specification.volume %></dd>
  <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @specification.price %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              commodity_specifications_path(@commodity), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_commodity_specification_path(@commodity,@specification), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              commodity_specification_path(@commodity,@specification),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
