<%- model_class = ManualStockDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @manual_stock_detail.name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:manual_stock_id) %>:</strong></dt>
  <dd><%=ManualStock.find(@manual_stock_detail.manual_stock_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= Supplier.find(@manual_stock_detail.supplier_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specification_id) %>:</strong></dt>
  <dd><%=Specification.find( @manual_stock_detail.specification_id).all_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @manual_stock_detail.amount %></dd>
  

  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @manual_stock_detail.desc %></dd>


  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @manual_stock_detail.status_name %></dd>

  <dt><strong><%= model_class.human_attribute_name(:defective) %>:</strong></dt>
  <dd><%= @manual_stock_detail.defective_name %></dd>

</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              manual_stock_manual_stock_details_path(@manual_stock), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_manual_stock_manual_stock_detail_path(@manual_stock,@manual_stock_detail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              manual_stock_manual_stock_detail_path(@manual_stock,@manual_stock_detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
