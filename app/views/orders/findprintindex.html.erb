<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human%></h1>
  
</div>


<%= render partial: 'grid'%>
  <% @keycorder=@orders_grid.current_page_records.first.keyclientorder_id %>
  <div style="float:right">
     <% if can? :stockout, Order %>
      <%= link_to t('.stockout', :default => t("helpers.links.stockout")),
                  stockout_orders_url(@keycorder),
                  :class => 'btn btn-primary' %>
      <% end %>
  </div>


     <div>商户:</div>
     <div><%= grid_filter(@orders_grid, :business_id_filter)%></div>

     <div>日期:</div>
     <div><%= grid_filter(@orders_grid, :created_at_filter)%></div>


    <td><button class="wg-external-submit-button" data-grid-name="grid">Submit</button></td>
    <td><button class="wg-external-reset-button" data-grid-name="grid">Reset</button></td>

 
 <%= render_grid(@orders_grid)%>


<div>
<p>订单明细汇总</p>
<table class="table table-striped">
  <thead>
    <tr>
      <th>商户</th>
      <th>产品规格</th>
      <th>供应商</th>
      <th>数量</th>
    </tr>
  </thead>
  <tbody>
    <% @allcnt.each do |key,value| %>
      <tr>
        <td><%= Business.find(key[0]).name %></td>
        <td><%= Specification.find(key[1]).name %></td>
        <td><%= Supplier.find(key[2]).name %></td>
        <td><%= value[0] %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>