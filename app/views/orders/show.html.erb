<%- model_class = Order -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:no) %>:</strong></dt>
  <dd><%= @order.no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:order_type) %>:</strong></dt>
  <dd><%= @order.order_type %></dd>
   <dt><strong><%= model_class.human_attribute_name(:has_invoice) %>:</strong></dt>
  <dd><%= @order.has_invoice %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_id) %>:</strong></dt>
  <dd><%= @order.cust_id %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_name) %>:</strong></dt>
  <dd><%= @order.cust_name %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_phone) %>:</strong></dt>
  <dd><%= @order.cust_phone %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_mobilephone) %>:</strong></dt>
  <dd><%= @order.cust_mobilephone %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_address) %>:</strong></dt>
  <dd><%= @order.cust_address %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_postcode) %>:</strong></dt>
  <dd><%= @order.cust_postcode %></dd>
   <dt><strong><%= model_class.human_attribute_name(:cust_email) %>:</strong></dt>
  <dd><%= @order.cust_email %></dd>
   <dt><strong><%= model_class.human_attribute_name(:good_weight) %>:</strong></dt>
  <dd><%= @order.good_weight %></dd>
  <dt><strong><%= model_class.human_attribute_name(:good_sum) %>:</strong></dt>
  <dd><%= @order.good_sum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:good_amount) %>:</strong></dt>
  <dd><%= @order.good_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trans_type) %>:</strong></dt>
  <dd><%= @order.trans_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:trans_sum) %>:</strong></dt>
  <dd><%= @order.trans_sum %></dd>
  <dt><strong><%= model_class.human_attribute_name(:pay_type) %>:</strong></dt>
  <dd><%= @order.pay_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @order.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:buyer_desc) %>:</strong></dt>
  <dd><%= @order.buyer_desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:seller_desc) %>:</strong></dt>
  <dd><%= @order.seller_desc %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              orders_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_path(@order), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_path(@order),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
