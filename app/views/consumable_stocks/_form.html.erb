<%= form_for @consumable_stock, :html => { :class => 'form-horizontal' } do |f| %>

  <div class="control-group">
    <%= f.label :consumable_id, :class => 'control-label' %>
    <div class="controls">
    <%= f.select(:consumable_id, Consumable.accessible_by(current_ability).map{|u| [u.name,u.id]})%>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :shelf_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :shelf_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
   
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :index, Consumable %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              consumable_stocks_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
