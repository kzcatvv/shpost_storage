<%- model_class = OrderDetail -%>
<div>
  <%= hidden_field_tag('orderid',@curr_order )%>
  <%= hidden_field_tag('dtlcnt',@dtl_cnt )%>
  <%= hidden_field_tag('actcnt',@act_cnt )%>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:specification_id) %></th>
      <th>69码</th>
      <th><%= model_class.human_attribute_name(:amount) %></th>
    </tr>
  </thead>
  <tbody>
   <% if !@order_details.nil? %>
    <% @order_details.each do |orderdtl| %>
      <%= content_tag(:tr,content_tag(:td, orderdtl.name )+
        content_tag(:td, Specification.find(orderdtl.specification_id).all_name )+
        content_tag(:td, Specification.find(orderdtl.specification_id).sixnine_code )+
        content_tag(:td, orderdtl.amount ),id: "tr_od#{orderdtl.id}" ) %>

    <% end %>
  <% end %>
  </tbody>
  <%= label_tag 'split_tracking_number', '面单号:', class: 'control-group' %><%= text_field_tag 'so_tra_num', nil, class: "controls"%><input type="button" id="setsplittrackingnumber" value="设置面单号">
</table>