<%- model_class = StockLog -%>

<div>
  <table id="stock_logs" class="table table-striped">
    <thead>
      <tr>
        <th></th>
        <th>采购单明细</th>
        <th>货架</th>
        <th>库存数量</th>
        <th>入库数量</th>
        <th>状态</th>
        <th>创建时间</th>
        <th>确认时间</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @stock_logs.each do |stock_log| %>
      <tr id="stock_logs_id_<%=stock_log.id%>">
        <td><%= hidden_field_tag("stock_logs[][id]", stock_log.id, id: "stock_logs_id_#{stock_log.id}") %></td>
        <td>
          <% paid = PurchaseArrival.find_by(batch_no: stock_log.batch_no).id %>
          <%= select_tag("stock_logs[][paid]", options_for_select(PurchaseArrival.where(purchase_detail_id: @purchase.purchase_details).map{|u| ["#{u.batch_no}_#{u.purchase_detail.specification.name}",u.id]}, paid), id: "stock_logs_paid_#{stock_log.id}", style: "display: none;", onblur: 'clickout(this)') <<
          content_tag(:p, "#{stock_log.batch_no}_#{stock_log.specification.name}", {id: "stock_logs_paid_#{stock_log.id}", onclick: 'clickin(this);'}) %>
        </td>
        <td>
          <%= content_tag(:p, stock_log.stock.shelf.shelf_code, {id: "stock_logs_shelfid_#{stock_log.id}", onclick: 'clickin(this);'}) <<
          text_field_tag("stock_logs[][shelfid]", stock_log.stock.shelf.shelf_code, id: "stock_logs_shelfid_#{stock_log.id}", style: "display: none; width: 120px;", onblur: 'clickout(this)', 'data-autocomplete' => "/shelves/autocomplete_shelf_shelf_code") %>
        </td>
        <td>
          <%= content_tag(:p, stock_log.stock.actual_amount, {id: "stock_logs_actamount_#{stock_log.id}"})%>
        </td>
        <td>
          <%= text_field_tag("stock_logs[][amount]", stock_log.amount, id: "stock_logs_amount_#{stock_log.id}", style: "display: none; width: 40px;", onblur: 'clickout(this)') <<
          if stock_log.amount == 0 || (stock_log.operation_type == "out" && stock_log.amount > stock_log.stock.actual_amount)
            content_tag(:p, stock_log.amount, {id: "stock_logs_amount_#{stock_log.id}", onclick: 'clickin(this);', style: 'background-color: red;'})
          else
            content_tag(:p, stock_log.amount, {id: "stock_logs_amount_#{stock_log.id}", onclick: 'clickin(this);'})
          end %>
        </td>
        <td id="stock_logs_status_<%=stock_log.id%>"><%=  StockLog::STATUS_SHOW[stock_log.status.to_sym] %></td>
        <td>
          <%= stock_log.created_at.to_s(:db) %>
        </td>
        <td>
          <%= stock_log.checked_at.try :to_s, :db %>
        </td>
        <td><%=link_to t('.destroy', :default => t("helpers.links.destroy")), "javascript:void(0);", onclick: 'destroy(this)', id: "stock_logs_deletelink_#{stock_log.id}", :class => 'btn btn-xs btn-danger' if can? :destroy, stock_log%></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

  <div style="float:right">
    <% if can? :new, Stock %>
      <% if @purchase %>
        <%= link_to t('.new', :default => t("helpers.links.new")),
                   "javascript:void(0)", onclick: "add()",
                    :class => 'btn btn-primary' %>
      <% end %>
    <% end %>
  </div>

<div>
  <% stocklogs = [] %>
  <% if @purchase %>
    <% stocklogs = @purchase.stock_logs %>
    <p>入库货物清单</p>
  <% else %>
    <p>出库货物清单</p>
    <% if @manual_stock%>
      <% stocklogs = @manual_stock.stock_logs%>
    <% else %>
      <% stocklogs = @keyclientorder.stock_logs%>
    <% end %>
  <% end %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>商户</th>
      <th>产品规格</th>
      <th>供应商</th>
      <th>数量</th>
    </tr>
  </thead>
  <tbody>
    <% stocklogs.each do |stocklog| %>
      <% if stocklog.amount == 0 %>
        <% next %>
      <% end %>
      <tr>
        <td><%= stocklog.business.name %></td>
        <td><%= stocklog.specification.name %></td>
        <td><%= stocklog.supplier.blank? ? "" : stocklog.supplier.name %></td>
        <td><%= stocklog.amount %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
