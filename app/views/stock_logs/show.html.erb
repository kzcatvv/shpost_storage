<%- model_class = StockLog -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:username) %>:</strong></dt>
  <dd><%= @stock_log.user.try :name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:operation) %>:</strong></dt>
  <dd><%= @stock_log.operation %></dd>
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @stock_log.amount %></dd>
  <!-- <dt><strong><%= model_class.human_attribute_name(:object_symbol) %>:</strong></dt>
  <dd><%= @stock_log.object_symbol %></dd> -->
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @stock_log.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_at) %>:</strong></dt>
  <dd><%= @stock_log.created_at.to_s(:db) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:checked_at) %>:</strong></dt>
  <dd><%= @stock_log.checked_at.to_s(:db) %></dd>
</dl>
<% if can? :index, Stock_log %>
<%= link_to t('.back', :default => t("helpers.links.back")),
              stock_logs_path, :class => 'btn btn-default'  %>
<% end %>
