<%- model_class = Stock -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:shelf_id) %>:</strong></dt>
  <dd><%= @stock.shelf.try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specification_id) %>:</strong></dt>
  <dd><%= @stock.specification.try(:all_name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:batch_no) %>:</strong></dt>
  <dd><%= @stock.batch_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:business_id) %>:</strong></dt>
  <dd><%= @stock.business.try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= @stock.supplier.try(:name) %></dd>
  <dt><strong><%= model_class.human_attribute_name(:actual_amount) %>:</strong></dt>
  <dd><%= @stock.actual_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:virtual_amount) %>:</strong></dt>
  <dd><%= @stock.virtual_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @stock.desc %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              stocks_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_stock_path(@stock), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              stock_path(@stock),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
