<%= form_for @order_detail, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :specification_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :specification_id, :class => 'text_field' %>
    </div>

    <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
   
    <div class="control-group">
    <%= f.label :price, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :price, :class => 'text_field' %>
    </div>

     <div class="control-group">
    <%= f.label :batch_no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :batch_no, :class => 'text_field' %>
    </div>
    <div class="control-group">
    <%= f.label :supplier_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :supplier_id, :class => 'text_field' %>
    </div>
    <div class="control-group">
    <%= f.label :order_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :order_id, :class => 'text_field' %>
    </div>
    <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  

  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :index, OrderDetail %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
             order_details_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
