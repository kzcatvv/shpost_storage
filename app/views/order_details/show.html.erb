<%- model_class = OrderDetail -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @order_detail.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specification_id) %>:</strong></dt>
  <dd><%= Specification.find(@order_detail.specification_id).all_name %></dd>
   <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @order_detail.amount %></dd>
  
   <dt><strong><%= model_class.human_attribute_name(:price) %>:</strong></dt>
  <dd><%= @order_detail.price %></dd>
   <dt><strong><%= model_class.human_attribute_name(:batch_no) %>:</strong></dt>
  <dd><%= @order_detail.batch_no %></dd>
   <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= Supplier.find(@order_detail.supplier_id).name %></dd>
   <dt><strong><%= model_class.human_attribute_name(:order_id) %>:</strong></dt>
  <dd><%=Order.find(@order_detail.order_id).no %></dd>
   <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @order_detail.desc %></dd>
  
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
             order_order_details_path(@order), :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_order_order_detail_path(@order,@order_detail), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              order_order_detail_path(@order,@order_detail),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
