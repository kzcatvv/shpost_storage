<%- model_class = CountryCode -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:chinese_name) %>:</strong></dt>
  <dd><%= @country_code.chinese_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:english_name) %>:</strong></dt>
  <dd><%= @country_code.english_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:code) %>:</strong></dt>
  <dd><%= @country_code.code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:surfmail_partition_no) %>:</strong></dt>
  <dd><%= @country_code.surfmail_partition_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:regimail_partition_no) %>:</strong></dt>
  <dd><%= @country_code.regimail_partition_no %></dd>
  <dt><strong><%= model_class.human_attribute_name(:is_mail) %>:</strong></dt>
  <dd><%= @country_code.is_mail_name %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              country_codes_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_country_code_path(@country_code), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              country_code_path(@country_code),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>



