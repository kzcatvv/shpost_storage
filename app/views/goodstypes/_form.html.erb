<%= form_for @goodstype, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :gtno, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gtno, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  
  
  <%= f.submit nil, :class => 'btn btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
            goodstypes_path, :class => 'btn btn-default' %>
 
<% end %>
