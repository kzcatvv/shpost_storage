<%- model_class = Relationship -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:business_id) %>:</strong></dt>
  <dd><%= Business.find(@relationship.business_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_id) %>:</strong></dt>
  <dd><%= Supplier.find(@relationship.supplier_id).name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:specification_id) %>:</strong></dt>
  <dd><%= Specification.find(@relationship.specification_id).all_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:external_code) %>:</strong></dt>
  <dd><%= @relationship.external_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spec_desc) %>:</strong></dt>
  <dd><%= @relationship.spec_desc %></dd>
  <dt><strong><%= model_class.human_attribute_name(:warning_amt) %>:</strong></dt>
  <dd><%= @relationship.warning_amt %></dd>
  <dt><strong><%= model_class.human_attribute_name(:sku) %>:</strong></dt>
  <dd><%= @relationship.sku %></dd>
  <dt><strong><%= model_class.human_attribute_name(:piece_to_piece) %>:</strong></dt>
  <dd><%= @relationship.piece_to_piece ? '是' : '否' %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              relationships_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_relationship_path(@relationship), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              relationship_path(@relationship),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => '确定删除?')) },
              :class => 'btn btn-danger' %>
