<%= form_for @purchase, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :no, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :no, :class => 'text_field' %>
    </div>
  </div>
  
  <div class="control-group">
    <%= f.label :unit_id, :class => 'control-label' %>
    <div class="controls">
       <%= f.select(:unit_id, Unit.all.map{|u| [u.name,u.id]})%>
    </div>
  </div>


  <div class="control-group">
    <%= f.label :business_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:business_id, Business.all.map{|u| [u.name,u.id]})%>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sum, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sum, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :desc, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :desc, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select(:status, Purchase::STATUS.invert) %>
    </div>
  </div>

  


  <%= f.submit nil, :class => 'btn btn-primary' %>
  <% if can? :index, Purchase %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
              purchases_path, :class => 'btn btn-default' %>
  <% end %>
<% end %>
