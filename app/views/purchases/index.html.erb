<%- model_class = Purchase -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human%></h1>
  <div style="float:right">
    <% if can? :new, Purchase %>
      <%= link_to t('.new', :default => t("helpers.links.new")),
                  new_purchase_path,
                  :class => 'btn btn-primary' %>
    <% end %>
  </div>
</div>




<%= grid(@purchases_grid) do |g|
    g.column name: model_class.human_attribute_name(:no), attribute: 'no'

    g.column name: model_class.human_attribute_name(:unit_id), attribute: 'name',
    model: 'Unit' do |purchase|
        purchase.unit.try :name
    end

    g.column name: model_class.human_attribute_name(:business_id), attribute: 'name',
     model: 'Business' do |purchase|
        purchase.business.try :name
    end
  
    

    g.column name: model_class.human_attribute_name(:amount), attribute: 'amount'

    g.column name: model_class.human_attribute_name(:sum), attribute: 'sum'

    g.column name: model_class.human_attribute_name(:desc), attribute: 'desc'

    g.column name: model_class.human_attribute_name(:status), attribute: 'status',
    custom_filter: Purchase::STATUS.invert do |purchase| 
      purchase.statusname
    end



    g.column do |purchase|
      ActiveSupport::SafeBuffer.new << 
      (link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_purchase_path(purchase), :class => 'btn btn-xs btn-primary' if can? :update, purchase) << ' ' <<
      (link_to t('.destroy', :default => t("helpers.links.destroy")),
                      purchase_path(purchase),
                       :method => :delete, :data => { :confirm => t('wice_grid.saved_query_deletion_confirmation', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger' if can? :destroy, purchase)<< ' ' <<
      
      (link_to t('.purchase_details', :default => t("helpers.links.purchase_details")),purchase_purchase_details_path(purchase), :class => 'btn btn-xs btn-info' if can? :purchase_detail, purchase) 
      end
  end 
%>