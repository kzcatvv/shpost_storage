<%- model_class = Area -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:current_storage) %>:</strong></dt>
  <dd><%= @area.storage.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:area_code) %>:</strong></dt>
  <dd><%= @area.area_code %></dd>
  <dt><strong><%= model_class.human_attribute_name(:desc) %>:</strong></dt>
  <dd><%= @area.desc %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              areas_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_area_path(@area), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              area_path(@area),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
