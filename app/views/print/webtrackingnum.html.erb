content='';
<% eorder.order_details.each do |j| %>
content=content+'<%= j.name %>  数量：<%= j.amount %>\n'
<% end %>
LODOP.ADD_PRINT_TEXT("46.3mm","114.6mm","42.3mm","34.4mm",content);
LODOP.ADD_PRINT_TEXT("46.6mm","161.4mm","33.1mm","6.6mm",CurentTime(0,1));
LODOP.ADD_PRINT_TEXT("59.5mm","162.7mm","33.1mm","5.3mm",'<%= current_user.unit.name %>');
LODOP.ADD_PRINT_TEXT("75.9mm","171.4mm","21.4mm","5.3mm",'<%= eorder.total_weight %>');
LODOP.ADD_PRINT_TEXT("31.8mm","161.7mm","37.3mm","5.3mm",'<%= eorder.no %>');	
LODOP.PREVIEW();	
//LODOP.PRINT();	
	<% end %>
    
    
  };

  </script>

</head>
  
  <body onLoad="webtracking_preview();window.opener.location.reload();window.opener=null;window.open('','_top'); window.top.close();">
  
  	</body>
</html>